<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.romanimazione.controller.graphic.JavaFXAnimatorDashboardController"
            prefHeight="480.0" prefWidth="640.0">

    <top>
        <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-background-color: #f0f0f0;">
            <padding><Insets top="10" right="20" bottom="10" left="20"/></padding>
            <Label fx:id="welcomeLabel" text="Welcome, User"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Logout" onAction="#handleLogout"/>
        </HBox>
    </top>

    <center>
        <VBox spacing="20.0" alignment="CENTER">
            <Label text="Animator Dashboard">
                <font><Font size="24.0"/></font>
            </Label>
            
            <Button text="Manage Availability" prefWidth="200" prefHeight="50" onAction="#goToAvailability"/>
            <!-- Future buttons: View Offers, Manage Profile etc. -->
        </VBox>
    </center>

</BorderPane>
